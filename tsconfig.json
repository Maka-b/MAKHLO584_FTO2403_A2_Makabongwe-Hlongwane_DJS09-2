{
  "compilerOptions": {
    "target": "es5",                          // Specify ECMAScript target version
    "module": "commonjs",                     // Specify module code generation
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enable ECMAScript module interoperability
    "skipLibCheck": true,                     // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent across the project
    "sourceMap": true,                        // Generate corresponding '.map' file
    "outDir": "./dist"                        // Redirect output structure to the 'dist' directory
  },
  "include": [
    "./src/**/*"                              // Include all files in the 'src' directory
  ],
  "exclude": [
    "node_modules"                            // Exclude 'node_modules' directory
  ]
}
